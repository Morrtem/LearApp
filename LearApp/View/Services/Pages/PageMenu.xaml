<Page x:Class="LearApp.View.Services.Pages.PageMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LearApp.View.Services.Pages"
      mc:Ignorable="d"
      Title="PageMenu"
      Style="{StaticResource BasePage}">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Button x:Name="BtnServices"
                Content="Сервисы"
                Click="BtnServices_Click"/>
        <Button x:Name="BtnProduct"
                Content="Товары"
                Click="BtnProduct_Click"
                IsEnabled="False"/>
    </StackPanel>
</Page>
